{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "npm install --prefix proofmaster-deploy",
  "buildCommand": "npm --prefix proofmaster-deploy run build",
  "outputDirectory": "proofmaster-deploy/dist",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
